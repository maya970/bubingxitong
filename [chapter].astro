---
export async function getStaticPaths() {
  return Array.from({length: 169}, (_, i) => ({
    params: { chapter: String(i + 1) }
  }));
}

const { chapter } = Astro.params;
const num = parseInt(chapter);
const prev = num > 1 ? `/${num - 1}` : null;
const next = num < 169 ? `/${num + 1}` : null;

const padded = chapter.padStart(4, '0');
let content = '章节内容加载中...';
try {
  content = await import(`./${padded}.txt`).then(m => m.default);
} catch (e) {}
const lines = content.split('\n');
const title = lines[0]?.trim() || `第${num}章`;
const body = lines.slice(1).join('\n');
---
<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <style>
    body { margin:0; background:#f9f5f0; font-family: system-ui; line-height: 2; font-size: 18px; }
    .container { max-width: 900px; margin: 0 auto; padding: 20px; background:white; min-height:100vh; }
    .header { text-align:center; padding:20px 0; border-bottom:1px solid #eee; margin-bottom:30px; }
    .content { padding: 0 10px; text-indent: 2em; white-space: pre-wrap; }
    .nav { position:fixed; top:0; left:0; right:0; bottom:0; pointer-events:none; }
    .nav a { position:absolute; top:0; bottom:0; width:40%; pointer-events:all; }
    .prev { left:0; }
    .next { right:0; }
    .footer { text-align:center; padding:30px; color:#999; }
    @media (max-width:768px) { .content { font-size:19px; } }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>{title}</h1>
      <p>喧嚣未及之处</p>
    </div>
    <div class="content">
      {body}
    </div>
    <div class="footer">
      {prev && <a href={prev}>← 上一章</a>} &nbsp;
      <a href="/chapters">目录</a> &nbsp;
      {next && <a href={next}>下一章 →</a>}
    </div>
  </div>

  <div class="nav">
    {prev && <a href={prev} class="prev"></a>}
    {next && <a href={next} class="next"></a>}
  </div>

  <script>
    document.body.addEventListener('keydown', e => {
      if (e.key === 'ArrowLeft' && "{prev}") location.href = "{prev}";
      if (e.key === 'ArrowRight' && "{next}") location.href = "{next}";
      if (e.key === ' ') { e.preventDefault(); if ("{next}") location.href = "{next}"; }
    });
  </script>
</body>
</html>
